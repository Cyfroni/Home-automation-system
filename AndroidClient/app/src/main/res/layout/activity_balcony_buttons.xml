<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_margin="0dp">
            <Button
                android:id="@+id/light_b1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:layout_margin="5dp"
                android:background="@color/clickable"
                android:onClick="action"/>
            <Button
                android:id="@+id/light_b2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:layout_margin="5dp"
                android:background="@color/clickable"
                android:onClick="action"/>
            <Button
                android:id="@+id/light_b3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:layout_margin="5dp"
                android:background="@color/clickable"
                android:onClick="action"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_margin="0dp">
            <Button
                android:id="@+id/light_b4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:layout_margin="5dp"
                android:background="@color/clickable"
                android:onClick="action"/>
            <Button
                android:id="@+id/light_b5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:layout_margin="5dp"
                android:background="@color/clickable"
                android:onClick="action"/>
            <Button
                android:id="@+id/light_b6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:layout_margin="5dp"
                android:background="@color/clickable"
                android:onClick="action"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_margin="0dp">
            <Button
                android:id="@+id/light_b7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:layout_margin="5dp"
                android:background="@color/clickable"
                android:onClick="action"/>
            <Button
                android:id="@+id/light_b8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:layout_margin="5dp"
                android:background="@color/clickable"
                android:onClick="action"/>
            <Button
                android:id="@+id/sync_b"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Sync"
                android:layout_margin="5dp"
                android:background="@color/clickable"
                android:onClick="synchronize"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
